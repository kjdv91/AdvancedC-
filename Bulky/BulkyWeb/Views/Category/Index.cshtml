@model List<Category>
@{
}
<div class="container">
    <div class="col-6">
        <div class="text-primary">
            <h1>Category List</h1>
        </div>
         
    </div>
    <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            Create New Category
        </a>

    </div>
    

</div>

<table>
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var cat in Model.OrderBy(s=>s.Name))
        {
            <tr>
                <td>@cat.Name</td>
                <td>@cat.DisplayOrder</td>
            </tr>

        }
       
    </tbody>    
    

</table>

@model MenuApp.Models.Dish
@{
    ViewData["Title"] = "Details";
}
<div class= "container">
    <div class= "d-flex justify-content-center">
        <h3>@Model.Name</h3>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@Model.ImageURL" alt="Product" style="width=300px" height="200px" />
    </div>
    <div class="d-flex justify-content-center">
        <h3>@Model.Price.ToString("N2") Dollars</h3>
    </div>

    <div class="d-flex justify-content-center">
        Ingredients:
        <ul>
            @foreach(var item in Model.DishIngredient){
                <li>
                    @item.Ingredient.Name
                </li>
            }
            
        </ul>
    </div>
    <a class="btn btn-info"></a>
</div>
